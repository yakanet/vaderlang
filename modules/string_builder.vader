@load "string"

StringBuilder :: struct {
    parts: []String
    size: u32
    index: u32
}

newStringBuilder :: fn(size: u32) -> StringBuilder {
    return StringBuilder {
        .parts = [0]String,
        .size  = 0,
        .index = 0
    }
}

appendString:: fn(this: StringBuilder, string: String) -> void {
    this.index = this.index + 1
    this.parts[this.index]
}

