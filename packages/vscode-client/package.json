{
  "name": "vaderlang-vscode-client",
  "displayName": "Vader",
  "description": "Support for vader language",
  "version": "0.0.1",
  "publisher": "yakanet",
  "scripts": {
    "build": "bun copy-lsp && LSP_LOCATION=\"'./build/lsp/build/index.js'\" bun build:client",
    "build:client": "bun build --format=cjs --target=node --external=vscode --define LSP_LOCATION:\"${LSP_LOCATION}\" --outfile=build/extension.js src/extension.ts",
    "copy-lsp": "bun run ./copy-lsp.ts",
    "watch": "LSP_LOCATION=\"'../lsp-server/build/index.js'\" bun run build:client --watch",
    "bundle": "bun run build && vsce package --no-dependencies -o ../../dist"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./build/extension.js",
  "dependencies": {
    "glob": "^11.0.0",
    "vscode-languageclient": "^9.0.1",
    "@vaderlang/lsp-server": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "typescript": "^5.7.2",
    "@types/vscode": "^1.86.0",
    "@vscode/vsce": "^3.2.2",
    "@vscode/test-electron": "^2.4.1"
  },
  "contributes": {
    "languages": [
      {
        "id": "vader",
        "aliases": [
          "Vader",
          "vader"
        ],
        "icon": {
          "light": "./icons/letter-v.png",
          "dark": "./icons/letter-v.png"
        },
        "showLanguageModeIcons": true,
        "extensions": [
          ".vader"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vader",
        "scopeName": "source.vader",
        "path": "./syntaxes/vader.tmLanguage.json"
      }
    ]
  }
}
